<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOrderActivity">
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please confirm your Shipment Details"
        android:layout_margin="15dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textSize="18dp"
        android:layout_below="@+id/txt"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:gravity="left"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Name"
        android:id="@+id/shippment_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Contact Number"
        android:textSize="18dp"
        android:layout_below="@+id/shippment_name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:gravity="left"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="20dp"
        android:inputType="text"
        android:layout_marginRight="20dp"
        android:hint="Your Contact Number"
        android:id="@+id/shippment_phone"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Address"
        android:textSize="18dp"
        android:layout_below="@+id/shippment_phone"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:gravity="left"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginLeft="20dp"
        android:inputType="text"
        android:layout_marginRight="20dp"
        android:hint="Your Address"
        android:id="@+id/shippment_address"
        tools:ignore="MissingConstraints" />

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/next"
       android:layout_alignParentBottom="true"
       android:background="#169BD7"
       android:text="Next"
       android:textColor="@android:color/white"
       android:textSize="20dp"
       android:layout_margin="30dp"/>


</RelativeLayout>