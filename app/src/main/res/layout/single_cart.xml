<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_margin="10dp"
    android:padding="8dp"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/cart_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/banner" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cart_image"
            android:layout_toRightOf="@+id/cart_image"
            android:maxLines="1"
            android:text="Product Name"
            android:textColor="#333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_alignStart="@+id/product_name"
            android:layout_alignLeft="@+id/product_name"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:text="Price = "
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_alignStart="@+id/price"
            android:layout_alignLeft="@+id/price"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:text="Quantity = "
            android:textColor="#333"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>